class Solution {
    public String baseNeg2(int N) {
        if(N==0)
            return "0";
        String yushu;
        StringBuilder sb=new StringBuilder();
        while(N!=0){
            yushu=String.valueOf(Math.abs(N%2));    
            sb.append(yushu);
            N=(int)Math.ceil(N/-2.0);            
        }
        return sb.reverse().toString();
    }
}
